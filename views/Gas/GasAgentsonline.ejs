<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br><br><br>
    <div class="col-lg-8">
  <div class="card example-1">
   <div class="card-body">
        <div class="page-header"><h4> Gas Refill Agents Online</h4></div>
        <% var keys=Object.keys(agents)  %>
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr>
                <th>Total Online</th>
                <th scope="col"><p><%= size %></p></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>View Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewAgentLocation('<%= agent %>','gasAgentsAvailable') }">
                    <td><%= agents[agent].agentName %></td>
                    <td><%= agents[agent].agentPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewAgentLocation('<%= agent %>','gasAgentsAvailable') }"> View Location</button></td>
                </tr>
            <% })%>
            </tbody>
         </table>
        </div>
        </div>
       </div>
    <div class="col-lg-4">
        <h3>Agent Location</h3>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                async defer></script>
    </div>
</div>