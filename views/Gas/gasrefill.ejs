<% include ../menu.html %>
   <div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
    <div class="page-header"><h1> Gas refill Panel</h1></div>
        <div class="col-lg-10" >
                    <div class="card example-1 square scrollbar-dusty-grass square thin">
                   <div class="card-body anyClass">
        <% var keys=Object.keys(gasagents)%>
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th><p>Total: <%= size %></p></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>Account Status</th>
                <th>Wallet Balance</th>
                <th>Profile Pic</th>
                <th>Nationl ID</th>
                <th>Working Certificate</th>
                <th>Approve</th>
                <th>Deactivate</th>
                <th>Reject</th>
                <th>Trips</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                    <tr onmouseover="{ GetAgentRating('<%= agent %>','GasAgents') }">
                    <td><%= gasagents[agent].userName %></td>
                    <td><%= gasagents[agent].phone %></td>
                    <td><%= gasagents[agent].accountStatus %></td>
                    <td><%= gasagents[agent].walletBalance %> UGX</td>
                    <td><a target="_blank" href="<%= gasagents[agent].profilePic %>"><img height="30" width="30" src="<%= gasagents[agent].profilePic %>"/></a></td>
                    <td><a target="_blank" href="<%= gasagents[agent].NationalIDPic %>"><img height="30" width="30" src="<%= gasagents[agent].NationalIDPic %>"/></a></td>
                    <td><a target="_blank" href="<%= gasagents[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= gasagents[agent].WorkingCertificate %>"/></a></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>','GasAgents') }" id='approveButton'>Approve</button></td>
                    <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>','GasAgents') }" id='deactivateButton'>Deactivate</button></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>','GasAgents') }" id='rejectButton'>reject</button></td>
                    <td><a href="/viewSingleAgentServiceHistory/<%= agent %>/<%= 'gasrefill'%>/"><button class="btn btn-primary" id='singleTripsButton'>History</button></a></td>

                </tr>
            <% })%>
             </tbody>
        </table>
        </div>
      </div>
     </div>
        <div class="col-lg-2">
         <h1>Rating</h1>
         <h1 id=rating></h1>
        </div>

    </div>
