<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br><br><br>
    <div class="col-lg-8">
        <div class="paage-header"><h3>Gas Refill Single Service History</h3></div>
         <% var keys=Object.keys(historyobjects)  %>
        <div class="card example-1">
       <div class="card-body">
       
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Total: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Service Charge</th>
                <th scope="col">Service point</th>
                <th scope="col" >Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ getGasCustomerandAgent('<%= historyobjects[agent].customer %>','<%= historyobjects[agent].GasAgent %>') }">
                    <td><%= historyobjects[agent].serviceFee %></td>
                    <td><%= historyobjects[agent].servicepoint %></td>
                    <% var date = new Date(historyobjects[agent].timestamp*1000) %>
                    <td><%= date %></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div>
    </div>
    </div>
    <div class="col-lg-4">
        <h3>Agent & Customer Details</h3>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>
    </div>
</div>