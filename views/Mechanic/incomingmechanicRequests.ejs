<% include ../menu.html %>
    <div class="col-lg-4"style="position:fixed;float:right;margin-left:70%;margin-top:10%">
        <b>Request Location</b>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                async defer></script>
    </div>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
    <div class="col-lg-8">
        <div class="page-header"><h1> Incoming Clients Request For Mechanic</h1></div>
        <div class="card example-1">
      <div class="card-body">
        <% var keys=Object.keys(requests)  %>
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr >
                <th scope="col">Total Requests: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Client Contact</th>
                <th scope="col">View Request Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewClientLocation('<%= agent %>','mechaniccustomerRequest') }">
                    <td><%= requests[agent].customerPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewClientLocation('<%= agent %>','mechaniccustomerRequest') }">View Request Location</button></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
</div>
