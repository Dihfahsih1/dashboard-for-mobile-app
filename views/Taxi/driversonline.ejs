<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
        <div class="page-header"><h3>Drivers Online</h3></div>
         <div class="col-lg-9 anyClass">
              <% var keys=Object.keys(onlinedrivers)  %>
              <div class="card example-1">
                   <div class="card-body">
                <table class="table" border="2">
                        <thead class="thead-dark">
                            <tr >
                                <th scope="col">Total Online</th>
                                <th scope="col"><p><%= size %></p></th>
                              </tr>
                          <tr>
                            <th scope="col">UserName</th>
                            <th scope="col">Phone</th>
                            <th scope="col">No.Plate</th>
                            <th scope="col" >Car Type</th>
                          </tr>
                        </thead>
                        <tbody>
                 <% keys.forEach(function(agent){ %>
                    <tr onmouseover="{ viewDriverLocation('<%= agent %>') }">
                            <td><%= onlinedrivers[agent].driverName %></td>
                            <td><%= onlinedrivers[agent].driverPhone %></td>
                            <td><%= onlinedrivers[agent].driverCarPlate %></td>
                            <td><%= onlinedrivers[agent].driverCarType %></td>
                            <td><button class="btn btn-primary"onclick="{ viewDriverLocation('<%= agent %>') }"> View Location</button></td>
                    </tr>
                  <% })%>
            </tbody>
          </table>
         </div></div></div>
         <div class="col-lg-3">
         <h3>Driver Location</h3>
            <div id="map">
            </div>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
            async defer></script>

         </div>
</div>
