<% include ../menu.html %>
       <div class="col-lg-2"style="position:fixed;float:right;margin-left:85%;margin-top:10%">
             <b>Driver & Customer Details</b>
             <h5 id='riderName'></h5>
             <h5 id='riderPhone'></h5>
             <h5 id='riderHelment'></h5>
             <img id="riderImage" height="100" width="100"/>
             <h5 id='customerPhone'></h5>
         </div>
   <div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
        <div class="page-header"><h3>Driver Agents Trips</h3></div>
        
        <div class="col-lg-10 anyClass">
      <% var keys=Object.keys(alldrivertrips)  %>
      <table class="table table-hover" border="2">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Total Trips</th>
                    <th scope="col"><p><%= size %></p></th>
                  </tr>
              <tr>
                <th>PickUp</th>
                <th>Total Cost</th>
                <th>Destination</th>
                <th>Distance</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody >
             <% keys.forEach(function(agent){ %>
               <tr id=""  onmouseover="{ getTaxiRideCustomerandDriver('<%= alldrivertrips[agent].customer %>','<%= alldrivertrips[agent].driver %>') }">
                <td><%= alldrivertrips[agent].PickUp %></td>
                <td><%= alldrivertrips[agent].TotalCost %></td>
                <td><%= alldrivertrips[agent].destination %></td>
                <td><%= alldrivertrips[agent].distance %></td>
                <% var date = new Date(alldrivertrips[agent].timestamp*1000) %>
                <td><%= date %></td>
               </tr>
               <% })%>
            </tbody>
          </table>
          </div>
         </div>
         </div>
         </div>
         </div>
         
        
        
        
