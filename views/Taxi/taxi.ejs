<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
            <div class="page-header">
            <h1>Welcome to Drivers Management Panel</h1>
            </div>
                    <% var keys=Object.keys(drivers)%>
                    <div class="col-lg-10">
                    <div class="card example-1 square scrollbar-dusty-grass square thin">
                   <div class="card-body">
                    <table class="table table-hover" border="2">
                            <thead class="thead-dark">
                              <tr>
                                <th ><p>Total: <%= size %></p></th>
                              </tr>
                              <tr style="text-align: left">
                                  <th>Phone</th>
                                <th>Name</th>
                                <th>Account Status</th>
                                <th>Wallet Balance</th>
                                <th>Car Type</th>
                                <th>Number Plate</th>
                                <th>Profile Pic</th>
                                <th>Nationl ID</th>
                                <th>Driving Permit</th>
                                <th>Third party</th>
                                <th>Approve</th>
                                <th>Deactivate</th>
                                <th>Reject</th>
                                <th>Trips</th>
                                <th>Pay Driver</th>
                              </tr>
                            </thead>
                            <tbody>
                            <% keys.forEach(function(agent){ %>
                             <tr onmouseover="{ GetDriverRating('<%= agent %>') }">
                                 <td style="font-size:12px"><%= drivers[agent].phone %></td>
                                <td><%= drivers[agent].userName %></td>
                                <td><%= drivers[agent].accountStatus %></td>
                                <td><%= drivers[agent].walletBalance %> UGX</td>
                                <td><%= drivers[agent].carType %></td>
                                <td><%= drivers[agent].numberPlate %></td>
                                <td><a target="_blank" href="<%= drivers[agent].profilePic %>"><img height="30" width="30" src="<%= drivers[agent].profilePic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].NationalIDPic %>"><img height="30" width="30" src="<%= drivers[agent].NationalIDPic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].DrivingPermitPic %>"><img height="30" width="30" src="<%= drivers[agent].DrivingPermitPic %>"/></a></td>
                                <td><a target="_blank" href="<%= drivers[agent].ThirdPartyPic %>"><img height="30" width="30" src="<%= drivers[agent].ThirdPartyPic %>"/></a></td>
                                 
                                 <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveDriver('<%= agent %>') }" id='approveButton'>Approve</button></td>
                                 <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateDriver('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                                 <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectDriver('<%= agent %>') }" id='rejectButton'>reject</button></td>

                                <td><a href="/viewSingleDriverTrips/<%= agent %>/"><button class="btn btn-primary"  id='singleTripsButton'>History</button>  </a></td>
                                <td style=""><a href="/payDriver/<%= agent %>/"><button class="btn btn-success"  id='paymentsButton'>Pay Driver</button></a></td>
                              </tr>
                             <% })%>
                            </tbody>
                          </table>
                          </div>
                          </div>
                          </div>
                         <div class="col-lg-2">
                             <h1>Rating</h1>
                             <h1 id=rating></h1>
                         </div>
        </div>
