<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header focus"><h1>Bodaboda Agents Currently Online</h1></div>
  <div class="col-lg-8 anyClass">
  <div class="card example-1">
   <div class="card-body">
    
        <% var keys=Object.keys(onlinebodas)%>
        <table class="table" border="1">
         <thead class="thead-dark">
            <tr>
                <th>Total Online</th> 
                <th><p><%= size %></p></th>
            </tr>
             <tr>
               <th>UserName</th> 
               <th>Phone</th>
               <th>Helment No.</th>
               <th>View Location</th>
            </tr>
         </thead>
         
          <tbody>
           <% keys.forEach(function(agent){%>
             <tr onmouseover="{ viewBodaLocation('<%= agent %>') }">
                <td><%= onlinebodas[agent].riderName %></td>
                <td><%= onlinebodas[agent].riderPhone %></td>
                <td><%= onlinebodas[agent].riderHelmentNo %></td>
                <td><button class="btn btn-primary"onclick="{ viewBodaLocation('<%= agent %>') }"> View Location</button></td>
           </tr>
            <%})%>
          </tbody>
          
       </table>
     </div>
     </div>
 </div>

 <div class="col-lg-4">
         <h3>Rider Location</h3>
            <div id="map">
            </div>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap" async defer></script>  

 </div>
</div>
