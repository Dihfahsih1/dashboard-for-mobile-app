<% include ../menu.html %>

     <div class="col-lg-2"style="position:fixed;float:right;margin-left:85%;margin-top:10%">
         <b>Driver & Customer Details</b>
         <h5 id='riderName'></h5>
         <h5 id='riderPhone'></h5>
         <h5 id='riderHelment'></h5>
         <img id="riderImage" height="100" width="100"/>
         <h5 id='customerPhone'></h5>
     </div>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
            <div class="page-header"><h3>Bodaboda Agents Trips</h3></div>
            <div class="col-lg-10 anyClass">
        <% var keys=Object.keys(allbodatrips)  %>
        <div class="card example-1 square scrollbar-dusty-grass square thin">
      <div class="card-body">
      <table class="table table-hover" border="2">
        <thead class="thead-dark">
            <tr>
                <th>Total Trips</th>
                <th><p><%= size %></p></th>
            </tr>
          <tr>
            <th>PickUp</th>
            <th>Total Cost</th>
            <th>Destination</th>
            <th>Distance</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
         <% keys.forEach(function(agent){ %>
           <tr onmouseover="{getBodaRideCustomerandRider('<%= allbodatrips[agent].customer %>','<%= allbodatrips[agent].rider %>') }">
            <td><%= allbodatrips[agent].PickUp %></td>
            <td><%= allbodatrips[agent].TotalCost %></td>
            <td><%= allbodatrips[agent].destination%></td>
            <td><%= allbodatrips[agent].distance %></td>
            <% var date = new Date(allbodatrips[agent].timestamp*1000) %>
            <td><%= date %></td>
           </tr>
           <% })%>
        </tbody>
      </table>
      </div>
      </div>
      </div>
    </div>

