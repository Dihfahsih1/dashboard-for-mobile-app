<% include ../menu.html %>
     <div class="col-lg-2"style="position:fixed;float:right;margin-left:85%;margin-top:10%">
         <b>Driver & Customer Details</b>
         <h5 id='riderName'></h5>
         <h5 id='riderPhone'></h5>
         <h5 id='riderHelment'></h5>
         <img id="riderImage" height="100" width="100"/>
         <h5 id='customerPhone'></h5>
     </div>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
      <div class="page-header "><h4>Viewing single Trip</h4></div>
    <div class="col-lg-9 anyClass">
            <% var keys=Object.keys(historyobjects)  %>
       <table class="table table-hover" border="2">
        <thead class="thead-dark">
         <tr>
                <th>Total Trips</th>
                <th><p><%= size %></p></th>
        </tr>
          <tr>
            <th>PickUp</th>
            <th>Total Cost</th>
            <th>Destination</th>
            <th>Distance</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
        <% keys.forEach(function(agent){ %>
           <tr id=""  onmouseover="{ getBodaRideCustomerandRider('<%= historyobjects[agent].customer %>','<%= historyobjects[agent].rider %>') }">
            <td><%= historyobjects[agent].PickUp %></td>
            <td><%= historyobjects[agent].TotalCost %></td>
            <td><%= historyobjects[agent].destination %></td>
            <td><%= historyobjects[agent].distance %></td>
            <% var date = new Date(historyobjects[agent].timestamp*1000) %>
            <td><%= date %></td>
           </tr>
           <% })%>

        </tbody>
      </table>
     </div>
     
</div>