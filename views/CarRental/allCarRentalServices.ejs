
<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
            <div class="page-header"><h1> Car Rental Agents History</h1></div>
    <div class="col-lg-9">
        <% var keys=Object.keys(allcarrentalservices)  %>
        
        <div class="card example-1">
      <div class="card-body">
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th>Total</th>
                <th><p><%= size %></p></th>
            </tr>
            <tr>
                <th>Service Charge</th>
                <th>Service point</th>
                <th>Rating</th>
                <th>Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
            <tr onmouseover="{ getCarRentalCustomerandAgent('<%= allcarrentalservices[agent].customer %>','<%= allcarrentalservices[agent].CarRentalAgent %>') }">
                    <td><%= allcarrentalservices[agent].serviceFee %></td>
                    <td><%= allcarrentalservices[agent].servicepoint %></td>
                    <td><%= allcarrentalservices[agent].rating %></td>
                    <% var date = new Date(allcarrentalservices[agent].timestamp*1000) %>
                    <td><%= date %></td>

                </tr>

            <% })%>

            </tbody>
        </table>
    </div></div></div>
    <div class="col-lg-3">
        <h3>Agent & Customer Details</h3>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>

    </div>
</div>