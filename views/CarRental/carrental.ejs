<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
 <div class="page-header"><h1> Car Rental Agents Management Panel</h1></div>
<div class="col-lg-10">
        <div class="card example-1">
         <div class="card-body anyClass">
        <% var keys=Object.keys(carrentalagents)  %>
            <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
              
                <th>Total Riders</th>
                <th><p><%= size %></p></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>Account Status</th>
                <th>Wallet Balance</th>
                <th>Profile Pic</th>
                <th>Nationl ID</th>
                <th>Working Certificate</th>
                <th>Approve</th>
                <th>Deactivate</th>
                <th>Reject</th>
                <th>Trips</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ GetCarRentalAgentRating('<%= agent %>') }">
                    <td><%= carrentalagents[agent].userName %></td>
                    <td><%= carrentalagents[agent].phone %></td>
                    <td><%= carrentalagents[agent].accountStatus %></td>
                    <td><%= carrentalagents[agent].walletBalance %> UGX</td>
                    <td><a target="_blank" href="<%= carrentalagents[agent].profilePic %>"><img height="30" width="30" src="<%= carrentalagents[agent].profilePic %>"/></a></td>
                    <td><a target="_blank" href="<%= carrentalagents[agent].NationalIDPic %>"><img height="30" width="30" src="<%= carrentalagents[agent].NationalIDPic %>"/></a></td>
                    <td><a target="_blank" href="<%= carrentalagents[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= carrentalagents[agent].WorkingCertificate %>"/></a></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveCarRentalAgent('<%= agent %>') }" id='approveButton'>Approve</button></td>
                    <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateCarRentalAgent('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectCarRentalAgent('<%= agent %>') }" id='rejectButton'>reject</button></td>
                    <td><a href="/viewSingleCarRentaAgentServiceHistory/<%= agent %>/"><button class="btn btn-primary"  id='singleTripsButton'>History</button>  </a></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
     <div class="col-lg-2">
             <h1>Rating</h1>
             <h1 id=rating></h1>
        </div>
</div>
