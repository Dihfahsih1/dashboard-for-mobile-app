<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
      <div class="page-header"><h3>Manage Doctors</h3></div>      
    <div class="col-lg-10">
            <% var keys=Object.keys(doctors)  %>
              <div class="card example-1 square scrollbar-dusty-grass square thin">
               <div class="card-body anyClass">
                <table class="table table-hover" border="2">
                <thead class="thead-dark">
                <tr>
                    <th><p>Total: <%= size %></p></th>
                </tr>
                <tr>
                    <th>UserName</th>
                    <th>Phone</th>
                    <th>Account Status</th>
                    <th>Wallet Balance</th>
                    <th>Profile Pic</th>
                    <th>Nationl ID</th>
                    <th>Working Certificate</th>
                    <th>Approve</th>
                    <th>Deactivate</th>
                    <th>Reject</th>
                    <th>Trips</th>
                </tr>
                </thead>
                <tbody>
                <% keys.forEach(function(agent){ %>
                    <tr onmouseover="{ GetDeliveryRating('<%= agent %>') }">
                        <td><%= doctors[agent].userName %></td>
                        <td><%= doctors[agent].phone %></td>
                        <td><%= doctors[agent].accountStatus %></td>
                        <td><%= doctors[agent].walletBalance %> UGX</td>
                        <td><a target="_blank" href="<%= doctors[agent].profilePic %>"><img height="30" width="30" src="<%= doctors[agent].profilePic %>"/></a></td>
                        <td><a target="_blank" href="<%= doctors[agent].NationalIDPic %>"><img height="30" width="30" src="<%= doctors[agent].NationalIDPic %>"/></a></td>
                        <td><a target="_blank" href="<%= doctors[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= doctors[agent].WorkingCertificate %>"/></a></td>
                       
                        <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveDoctor('<%= agent %>') }" id='approveButton'>Approve</button></td>
                        <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateDoctor('<%= agent %>') }" id='deactivateButton'>Deactivate</button></td>
                        <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectDoctor('<%= agent %>') }" id='rejectButton'>reject</button></td>
                        <td><a href="/viewSingleDoctorServiceHistory/<%= agent %>/"><button class="btn btn-primary"  id='singleTripsButton'>Trips</button>  </a></td>
                    </tr>
                <% })%>
                </tbody>
            </table>
        </div>
        </div></div>
     <div class="col-lg-2">
             <h1>Rating</h1>
             <h1 id=rating></h1>
        </div>
  </div>
