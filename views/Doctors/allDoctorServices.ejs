<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
 <div class="page-header"><h1> All Doctor Services History</h1></div>
    <div class="col-lg-9">
        <% var keys=Object.keys(alldoctorservices)  %>
        <div class="card example-1 square scrollbar-dusty-grass square thin">
      <div class="card-body">
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Total</th>
                <th scope="col"><p><%= size %></p></th>
            </tr>
            <tr>
                <th scope="col">Service Charge</th>
                <th scope="col">Service point</th>
                <th scope="col">Rating</th>
                <th scope="col" >Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ getDoctorCustomerandAgent('<%= alldoctorservices[agent].customer %>','<%= alldoctorservices[agent].Doctor %>') }">
                    <td><%= alldoctorservices[agent].serviceFee %></td>
                    <td><%= alldoctorservices[agent].servicepoint %></td>
                    <td><%= alldoctorservices[agent].rating %></td>
                    <% var date = new Date(alldoctorservices[agent].timestamp*1000) %>
                    <td><%= date %></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
    <div class="col-lg-3">
        <h3>Agent & Customer Details</h3>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>
    </div>
</div>
