<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header"><h1> Cleaning Agents Online</h1></div>
     <div class="col-lg-9">
        <div class="card example-1">
         <div class="card-body anyClass">    
            <div class="page-header"><h3> Cleaning Agents Online</h3></div>
                <% var keys=Object.keys(onlinecleaningagents) %>
                <table class="table" border="2">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Total Online</th>
                        <th><p><%= size %></p></th>
                    </tr>
                    <tr>
                        <th>UserName</th>
                        <th>Phone</th>
                        <th>View Location</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% keys.forEach(function(agent){ %>
                        <tr onmouseover="{ viewcleaningAgentLocation('<%= agent %>') }">
                            <td><%= onlinecleaningagents[agent].agentName %></td>
                            <td><%= onlinecleaningagents[agent].agentPhone %></td>
                            <td><button class="btn btn-primary"onclick="{viewcleaningAgentLocation('<%= agent %>') }"> View Location</button></td>
                        </tr>
                    <% })%>

                    </tbody>
                </table>
            </div></div></div>
            <div class="col-lg-3">
                <h3>Agent Location</h3>
                <div id="map">
                </div>
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                        async defer></script>
            </div>
        </div>
