<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
 <div class="page-header"><h1> Cleaning Services History</h1></div>
    <div class="col-lg-9">
        <% var keys=Object.keys(allcleaningservices)  %>
        <div class="card example-1 square scrollbar-dusty-grass square thin">
      <div class="card-body anyClass">
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Total</th>
                <th scope="col"><p><%= size %></p></th>
            </tr>
            <tr>
                <th scope="col">Service Charge</th>
                <th scope="col">Service point</th>
                <th scope="col">Rating</th>
                <th scope="col" >Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>

                <tr onmouseover="{ getCleaningCustomerandAgent('<%= allcleaningservices[agent].customer %>','<%= allcleaningservices[agent].CleaningAgent %>') }">
                    <td><%= allcleaningservices[agent].serviceFee %></td>
                    <td><%= allcleaningservices[agent].servicepoint %></td>
                    <td><%= allcleaningservices[agent].rating %></td>
                    <% var date = new Date(allcleaningservices[agent].timestamp*1000) %>
                    <td><%= date %></td>

                </tr>

            <% })%>

            </tbody>
        </table>

    </div> </div> </div>
    <div class="col-lg-3">
        <b>Agent & Customer Details</b>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>

    </div>
</div>
