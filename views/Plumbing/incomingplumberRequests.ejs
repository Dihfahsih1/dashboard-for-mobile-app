<% include ../menu.html %>
<div style="margin-left:160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header"><h1> Incoming Reguests for Plumbeing Agents</h1></div>
    <div class="col-lg-8">
         <div class="card example-1">
      <div class="card-body">
        <% var keys=Object.keys(requests)  %>
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr >
                <th scope="col">Total Requests: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Client Contact</th>
                <th scope="col">View Request Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewClientLocation('<%= agent %>','plumbingcustomerRequest') }">
                    <td><%= requests[agent].customerPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewClientLocation('<%= agent %>','plumbingcustomerRequest') }">View Request Location</button></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
    <div class="col-lg-4">
        <h3>Request Location</h3>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                async defer></script>

    </div>
</div>
