<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
            <div class="page-header"><h1> All Delivery Trips</h1></div>
    <div class="col-lg-12">
        <% var keys=Object.keys(alldeliverytrips)  %>
        <div class="card example-1">
      <div class="card-body">
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th>Total Trips</th>
                <th><p><%= size %></p></th>
            </tr>
            <tr>
                <th>PickUp</th>
                <th>Total Cost</th>
                <th>Destination</th>
                <th>Distance</th>
                <th>Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ getDeliveryCustomerandAgent('<%= alldeliverytrips[agent].customer %>','<%= alldeliverytrips[agent].deliveryAgent %>') }">
                    <td><%= alldeliverytrips[agent].PickUp %></td>
                    <td><%= alldeliverytrips[agent].TotalCost %></td>
                    <td><%= alldeliverytrips[agent].destination %></td>
                    <td><%= alldeliverytrips[agent].distance %></td>
                    <% var date = new Date(alldeliverytrips[agent].timestamp*1000) %>
                    <td><%= date %></td>

                </tr>

            <% })%>

            </tbody>
        </table>
    </div>
</div>