<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
    <div class="page-header"><h1> Delivery Agents Online</h1></div>
    <div class="col-lg-8">
            <div class="card example-1">
                   <div class="card-body">
        <% var keys=Object.keys(onlinedeliveryagents)  %>
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr >
                <th>Total Online</th>
                <th><p><%= size %></p></th>
            </tr>
            <tr>
                <th>UserName</th>
                <th>Phone</th>
                <th>View Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewdeliveryAgentLocation('<%= agent %>') }">
                    <td><%= onlinedeliveryagents[agent].agentName %></td>
                    <td><%= onlinedeliveryagents[agent].agentPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewdeliveryAgentLocation('<%= agent %>') }"> View Location</button></td>
                </tr>
            <% })%>

            </tbody>
        </table>
    </div>
</div>
</div>
<div class="col-lg-4">
     <h3>Agent Location</h3>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
        async defer></script>  

</div>