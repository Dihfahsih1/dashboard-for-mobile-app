<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="col-lg-8">
<% var keys=Object.keys(historyobjects)  %>
<div class="card example-1 square scrollbar-dusty-grass square thin">
                   <div class="card-body anyClass">
    <table class="table table-hover" border="2">
        <thead class="thead-dark">
        <tr>
        <th scope="col">Total Trips: <%= size %></th> 
        </tr>
          <tr>
            <th scope="col">PickUp</th> 
            <th scope="col">Total Cost</th>
            <th scope="col">Destination</th>
            <th scope="col" >Distance</th>
            <th scope="col" >Time</th>
          </tr>
        </thead>
        <tbody>
        <% keys.forEach(function(agent){ %>
           <tr id=""  onmouseover="{ getDeliveryCustomerandAgent('<%= historyobjects[agent].customer %>','<%= historyobjects[agent].deliveryAgent %>') }">
            <td><%= historyobjects[agent].PickUp %></td>
            <td><%= historyobjects[agent].TotalCost %></td>
            <td><%= historyobjects[agent].destination %></td>
            <td><%= historyobjects[agent].distance %></td>
            <% var date = new Date(historyobjects[agent].timestamp*1000) %>
            <td><%= date %></td>
           </tr>
           <% })%> 
        </tbody>
      </table>
 </div></div></div>
 <div class="col-lg-4">
     <h3>Agent & Customer Details</h3>
     <h5 id='riderName'></h5>
     <h5 id='riderPhone'></h5>
     <img id="riderImage" height="100" width="100"/>
     <h5 id='customerPhone'></h5>
 </div>
</div>