<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header"><h1> Salon Agents Online</h1></div>
    <div class="col-lg-8">
        <% var keys=Object.keys(agents)  %>
        <div class="card example-1">
      <div class="card-body">
        <table class="table" border="2">
            <thead class="thead-dark">
            <tr >
                <th scope="col">Total Online</th>
                <th scope="col"><p><%= size %></p></th>
            </tr>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Phone</th>
                <th scope="col" >View Location</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ viewAgentLocation('<%= agent %>','salonAgentsAvailable') }">
                    <td><%= agents[agent].agentName %></td>
                    <td><%= agents[agent].agentPhone %></td>
                    <td><button class="btn btn-primary"onclick="{ viewAgentLocation('<%= agent %>','salonAgentsAvailable') }"> View Location</button></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
    <div class="col-lg-4">
        <b>Agent Location</b>
        <div id="map">
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNtTpw_MrAdwrPlXGTlVVS5BjH5xZeh50&callback=initMap"
                async defer></script>

    </div>
</div>