<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header"><h1> Salon Agents Panel</h1></div>
<div class="col-lg-10" >
    <div class="card example-1">
     <div class="card-body">
        <% var keys=Object.keys(agents)  %>
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
                <th>UserName</th>
                <th>Phone</th>
                <th>Account Status</th>
                <th>Wallet Balance</th>
                <th>Profile Pic</th>
                <th>Nationl ID</th>
                <th>Working Certificate</th>
                <th>Approve</th>
                <th>Deactivate</th>
                <th>Reject</th>
                <th>Trips</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ GetAgentRating('<%= agent %>','SalonAgents')}">
                    <td><%= agents[agent].userName %></td>
                    <td><%= agents[agent].phone %></td>
                    <td><%= agents[agent].accountStatus %></td>
                    <td><%= agents[agent].walletBalance %> UGX</td>
                    <td><a target="_blank" href="<%= agents[agent].profilePic %>"><img height="30" width="30" src="<%= agents[agent].profilePic %>"/></a></td>
                    <td><a target="_blank" href="<%= agents[agent].NationalIDPic %>"><img height="30" width="30" src="<%= agents[agent].NationalIDPic %>"/></a></td>
                    <td><a target="_blank" href="<%= agents[agent].WorkingCertificate %>"><img height="30" width="30" src="<%= agents[agent].WorkingCertificate %>"/></a></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"onclick="{ approveRest('<%= agent %>','SalonAgents') }" id='approveButton'>Approve</button></td>
                    <td> <button style='margin-top:5px' class="btn btn-primary"onclick="{ deactivateRest('<%= agent %>','SalonAgents') }" id='deactivateButton'>Deactivate</button></td>
                    <td><button style='margin-top:5px' class="btn btn-primary"  onclick="{ rejectRest('<%= agent %>','SalonAgents') }" id='rejectButton'>reject</button></td>
                    <td><a href="/viewSingleAgentServiceHistory/<%= agent %>/<%= 'salon'%>/"><button class="btn btn-primary"  id='singleTripsButton'>History</button> </a></td>
                </tr>
            <% })%>
            </tbody>
        </table>
    </div></div></div>
        <div class="col-lg-2">
             <h1>Rating</h1>
             <h1 id=rating></h1>
        </div>
</div>
