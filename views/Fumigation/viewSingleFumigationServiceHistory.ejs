<% include ../menu.html %>
<div style="margin-left: 160px;padding:6px 8px 6px 16px;"><br><br>
<div class="page-header"><h3>Single Agent History</h3></div>
    <div class="col-lg-9">
         <div class="card example-1">
      <div class="card-body anyClass">
        <% var keys=Object.keys(historyobjects)  %>
        <table class="table table-hover" border="2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Total: <%= size %></th>
            </tr>
            <tr>
                <th scope="col">Service Charge</th>
                <th scope="col">Service point</th>
                <th scope="col" >Time</th>
            </tr>
            </thead>
            <tbody>
            <% keys.forEach(function(agent){ %>
                <tr onmouseover="{ getFumigationCustomerandAgent('<%= historyobjects[agent].customer %>','<%= historyobjects[agent].FumigationAgent %>') }">
                    <td><%= historyobjects[agent].serviceFee %></td>
                    <td><%= historyobjects[agent].servicepoint %></td>
                    <% var date = new Date(historyobjects[agent].timestamp*1000) %>
                    <td><%= date %></td>

                </tr>
            <% })%>

            </tbody>
        </table>
    </div></div></div>
 <div class="col-lg-3">
        <b>Agent & Customer Details</b>
        <h5 id='riderName'></h5>
        <h5 id='riderPhone'></h5>
        <img id="riderImage" height="100" width="100"/>
        <h5 id='customerPhone'></h5>
    </div>
</div>